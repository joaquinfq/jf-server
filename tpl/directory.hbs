<html>
    <head>
        <meta charset="utf-8" />
        <title>Índice {{dir}}</title>
        <style>
            a {
                color           : #555;
                text-decoration : none;
            }

            table {
                border-collapse : collapse;
                font-family     : monospace;
            }

            thead tr {
                border-bottom : 1px solid #333;
            }

            td, th {
                padding    : 2px 8px;
                text-align : left;
            }

            .size {
                text-align : right;
            }
        </style>
    </head>
    <body>
        <h1>Índice {{dir}}</h1>
        <table>
{{#if headers}}
            <thead>
                <tr>
{{#each headers}}
                    <th>{{.}}</th>
{{/each}}
                </tr>
            </thead>
{{/if}}
            <tbody>
{{#each entries}}
                <tr>
    {{#each .}}
        {{#if-cond "!==" @key "dir"}}
            {{#if-cond "!==" @key "href"}}
                {{#if-cond "===" @key "name"}}
                        <td class="{{@key}}"><a href="{{../href}}">{{.}}</a></td>
                {{/if-cond}}
                {{#if-cond "!==" @key "name"}}
                    <td class="{{@key}}">{{.}}</td>
                {{/if-cond}}
            {{/if-cond}}
        {{/if-cond}}
    {{/each}}
{{/each}}
                </tr>
            </tbody>
        </table>
    </body>
</html>
